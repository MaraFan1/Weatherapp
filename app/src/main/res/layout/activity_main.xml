<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colornew"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_subrayada_bold"
        android:text="@string/Logo"
        android:layout_marginTop="50sp"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/user_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/Logo"
        android:layout_marginTop="100sp"
        android:layout_marginHorizontal="50sp"
        android:backgroundTint="@color/colorAccent"
        android:inputType="text"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:hint="@string/hint_user"
        android:autofillHints="" />
    
    <Button
        android:id="@+id/main_btm"
        android:fontFamily="@font/montserrat_subrayada_bold"
        android:layout_below="@id/user_field"
        android:layout_marginTop="20sp"
        android:layout_marginHorizontal="130sp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/main_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_btm"
        android:fontFamily="@font/montserrat_subrayada_bold"
        android:layout_marginTop="50sp"
        android:textAlignment="center"
        android:textColor="@color/textcolorHint"
        android:textSize="25sp" />

</RelativeLayout>